<?xml version="1.0" encoding="utf-8"?>
<com.bignox.testbrightness.theme.widget.ColorRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_main_bg"
        android:background="?attr/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.bignox.testbrightness.theme.widget.ColorTextView
            android:layout_width="match_parent"
            android:textColor="?attr/main_textcolor"
            android:text="111111111111111111111111111111111111111111111111111111111111111111111111"
            android:layout_marginTop="20dp"
            android:layout_height="200dp"/>


    <com.bignox.testbrightness.theme.widget.ColorTextView
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:textColor="?attr/main_textcolor"
            android:text="2222222222222222222222222222222222222222222222222222222222222222"
            android:layout_alignParentBottom="true"
            android:layout_height="120dp"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_test_darklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/main_textcolor"
                android:text="change theme"/>

        <Button
                android:id="@+id/btn_test_tosecond"
                android:textColor="?attr/main_textcolor"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="to second page"

                android:layout_marginLeft="20dp"/>

    </LinearLayout>

</com.bignox.testbrightness.theme.widget.ColorRelativeLayout>